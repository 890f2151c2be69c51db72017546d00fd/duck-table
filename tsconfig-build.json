{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "esModuleInterop": true
  },
  "include": ["src/lib"],
  "exclude": ["node_modules"]
}
